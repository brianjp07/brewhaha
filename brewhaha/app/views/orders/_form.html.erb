<%= form_for(@order, layout: :default) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <!--%= f.label :quantity %><br-->
    <%= f.number_field :quantity, in:1.0..25.0 %>
  </div>
  <div class="field">
    <!--%= f.label :location %><br-->
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <!--%= f.label :expiration %> <i>(In Minutes)</i> <br-->
    <%= f.text_field :expiration, label: 'How long will you wait for your order? (In minutes, order will expire after that time if not fulfilled.)' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
