<h1>Orders#order_page</h1>
<p>Find me in app/views/orders/order_page.html.erb</p>


<div class="page-header">
  <h1>Open Orders (if orders are "taken" by someone remove from table)</h1>
</div>
<div class="row">
  <div class="col-md-6">
    <table class="table">
      <thead>
      <tr>
        <th>Time</th>
        <th>Order Info</th>
        <th>Location</th>
        <th>Expires At</th>
      </tr>
      </thead>

      <% @orders.each do |order| %>
          <tr>
          <td><%= order.created_at %></td>
          <td><%= order.quantity %> coffees</td>
          <td><%= order.location %></td>
            <td><%= order.expiration %></td>
          </tr>
      <% end %>

    </table>
  </div>
</div>
