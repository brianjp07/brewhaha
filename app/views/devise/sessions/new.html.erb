<h2>Log in</h2>

<div class="row">
  <div class="col-sm-6">
    <p>Log in to your account to place orders or begin selling.</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), layout: :horizontal) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <div class="col-sm-6 hidden-xs login-image">
    <%= image_tag "hipster_drinking_coffee.jpg", class: "img-responsive" %>
    <div class="centered"><em>Image courtesty of David Goehring, used under a CC-BY 2.0 license</em></div>
  </div>
</div>
